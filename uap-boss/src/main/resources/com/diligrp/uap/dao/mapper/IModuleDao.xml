<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.diligrp.uap.boss.dao.IModuleDao">
    <resultMap id="ModuleMap" type="com.diligrp.uap.boss.model.ModuleDO">
        <id column="id" property="id"/>
        <result column="module_id" property="moduleId"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="uri" property="uri"/>
        <result column="icon" property="icon"/>
        <result column="description" property="description"/>
        <result column="sequence" property="sequence"/>
        <result column="created_time" property="createdTime"/>
    </resultMap>

    <insert id="insertModule" parameterType="com.diligrp.uap.boss.model.ModuleDO" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO uap_module(`module_id`, `name`, `type`, `uri`, `icon`, `description`, `sequence`, `created_time`)
        VALUES (#{moduleId}, #{name}, #{type}, #{uri}, #{icon}, #{description}, #{sequence}, #{createdTime})
    </insert>

    <select id="findByModuleId" parameterType="long" resultMap="ModuleMap">
        SELECT * FROM uap_module WHERE module_id = #{moduleId}
    </select>

    <select id="listModules" parameterType="com.diligrp.uap.boss.domain.ModuleQuery" resultMap="ModuleMap">
        SELECT
        *
        FROM uap_module
        <where>
            <if test="moduleId != null">
                AND module_id = #{moduleId}
            </if>
            <if test="name != null">
                AND name LIKE "%"#{name}"%"
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
        </where>
        ORDER BY sequence
        LIMIT #{start}, #{limit}
    </select>

    <select id="countModules" parameterType="com.diligrp.uap.boss.domain.ModuleQuery" resultMap="long">
        SELECT
            COUNT(*)
        FROM uap_module
        <where>
            <if test="moduleId != null">
                AND module_id = #{moduleId}
            </if>
            <if test="name != null">
                AND name LIKE "%"#{name}"%"
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
        </where>
    </select>

    <update id="updateModule" parameterType="com.diligrp.uap.boss.model.ModuleDO">
        UPDATE uap_module
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="uri != null">
                uri = #{uri},
            </if>
            <if test="icon != null">
                icon = #{icon},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="sequence != null">
                sequence = #{sequence},
            </if>
        </set>
        WHERE module_id = #{moduleId}
    </update>

    <delete id="deleteByModuleId" parameterType="long">
        DELETE FROM uap_module WHERE module_id = #{moduleId}
    </delete>
</mapper>
